---
interface Props {
    position: 'top' | 'bottom' | 'left' | 'right';
    width?: string;
    height?: string;
}

const { position, width, height } = Astro.props;
const wClass = width ? `w-[${width}]` : '';
const hClass = height ? `h-[${height}]` : '';
---

<div class=`bubble ${position}`>
    <slot />
</div>

<style>
    .bubble {
        position: relative;
        padding: 20px;
        background: white;
        border-radius: 10px;
        border: solid 1px #ccc;
        /* ドロップシャドウを追加 */
        filter: drop-shadow(0px 2px 4px rgba(177, 165, 171, 0.8));
    }

    /* しっぽの基本スタイル */
    .bubble::after {
        content: '';
        position: absolute;
        width: 0;
        height: 0;
        border: 9px solid transparent;
        margin-left: -15px;
    }

    .bubble.bottom::after {
        top: 100%;
        left: 50%;
        border-top-color: white;
        border-bottom: 0;
        margin-top: -15px;
    }

    .bubble.top::after {
        bottom: 100%;
        left: 50%;
        border-bottom-color: white;
        border-top: 0;
        margin-bottom: -15px;
    }

    .bubble.right::after {
        top: 50%;
        left: 100%;
        border-left-color: white;
        border-right: 0;
        margin-top: -15px;
        margin-left: 0;
    }

    .bubble.left::after {
        top: 50%;
        right: 100%;
        border-right-color: white;
        border-left: 0;
        margin-top: -15px;
        margin-right: -15px;
    }
</style>
