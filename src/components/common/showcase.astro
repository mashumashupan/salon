---
import { getCollection } from "astro:content";
import ContentSection from "~/components/common/content-section.astro";
import ShowcaseCard from "~/components/common/showcase-card.astro";

const featuredSites = await getCollection(
  "showcase",
  ({ data }) => "featured" in data,
);
const orderedSites = featuredSites.sort(
  (a, b) => a.data.featured! - b.data.featured!,
);
---

<ContentSection title="Showcase" id="Note">
  <Fragment slot="lead">
    記事など <span class="text-primary">のリンク</span>（要れば）{" "}
    <!-- <span class="text-primary">Explore</span> what's possible and get{" "}
    <span class="text-primary">inspired</span>. -->
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {orderedSites.map((site) => <ShowcaseCard site={site} />)}
    </div>
    <p class="text-right text-sm">
      <a class="text-primary" href="https://note.com/ureshino_chan/">
        ...and more &rarr;
      </a>
    </p>
  </div>
</ContentSection>
