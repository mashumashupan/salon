import JoinButton from '~/components/common/joinButton.astro';
---

<div class="box w-full">
  <div class="hero flex w-full justify-center pt-[68px] md:pt-[96px]">
    <Image class="absolute -z-10 w-full" src={bg} alt="background image" />
    <div class="overlap pt-[52px]">
      <div>
        <Image class="hero-top" src={hero_top} alt="" />
        <Image
          class="shadow-overlay absolute top-[160px] w-full mix-blend-lighten md:top-[280px]"
          src={shadowover}
          alt=""
        />
      </div>
      <div class="rectangle"></div>
      <div class="h">
        <div class="overlap-group">
          <div class="text-wrapper">うれしのサロン</div>
          <div class="div">うれしのサロン</div>
          <div class="text-wrapper-2">うれしのサロン</div>
        </div>
      </div>
      <div class="subtitle">
        <div class="overlap-2">
          <p class="p">
            <span class="span">かわいく賢く</span>
            <span class="text-wrapper-3">生きる</span>
            <span class="span">女性</span>
            <span class="text-wrapper-4">のコミュニティ</span>
          </p>
