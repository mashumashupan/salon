    left: 0;
  }

  .box .rectangle {
    position: relative;
    margin-left: -19px;
    background-color: var(--variable-collection-salmon);
    transform: rotate(90deg);
  }

  .box .text-wrapper-2 {
    margin-top: -1px;
    text-shadow: 0px 2px 4px #b1a4aacc;
