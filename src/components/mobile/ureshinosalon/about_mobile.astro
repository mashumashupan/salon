    --montserrat-font-size: 14px;
    --montserrat-letter-spacing: 0.10000000149011612px;
    --montserrat-line-height: 20px;
    --montserrat-font-style: normal;
    --h1-j-font-family: 'Hina Mincho', Helvetica;
    --h1-j-font-weight: 400;
    --h1-j-font-size: 64px;
    --h1-j-letter-spacing: 4.48px;
    --h1-j-line-height: normal;
    --h1-j-font-style: normal;
    --pink-shadow: 3px 4px 5.800000190734863px 0px rgba(193, 157, 169, 1);
    --drop: 0px 2px 4px 0px rgba(177, 165, 171, 0.8);
    --variable-collection-beige: rgba(229, 213, 203, 1);
    --variable-collection-pink: rgba(198, 151, 165, 1);
    --variable-collection-white: rgba(255, 255, 255, 1);
    --variable-collection-pale-pink: rgba(245, 236, 239, 1);
    --variable-collection-salmon: rgba(215, 169, 159, 1);
    --variable-collection-beige-gradient: rgba(255, 255, 255, 0);
    --variable-collection-purple: rgba(158, 135, 190, 1);
  }

  .white-bokeh {
    top: 0;
    left: 0;
    mix-blend-mode: lighten;
    object-fit: cover;
  }

  .pink {
    top: 514px;
    mix-blend-mode: lighten;
    object-fit: cover;
    left: 0;
  }

  .bg {
    border-radius: 0px 40px 0px 40px;
    mix-blend-mode: multiply;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.22) 0.01%,
      rgba(221.48, 179.58, 193.4, 0.48) 81.5%
    );
  }

  .text-wrapper {
    text-shadow: 0px 2px 4px #b1a4aacc;
    font-family: 'Hina Mincho-Regular', Helvetica;
    font-weight: 400;
    color: var(--variable-collection-pink);
    font-size: 24px;
    letter-spacing: 1.68px;
    line-height: normal;
  }

  .title-2 {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    top: 0;
    left: 0;
  }

  .rectangle {
    position: relative;
    margin-left: -19px;
    background-color: var(--variable-collection-salmon);
    transform: rotate(90deg);
  }

  .text-wrapper-2 {
    margin-top: -1px;
    text-shadow: 0px 2px 4px #b1a4aacc;
    font-family: var(--mobile-h1-font-family);
    font-weight: var(--mobile-h1-font-weight);
    color: var(--variable-collection-pink);
    font-size: var(--mobile-h1-font-size);
    letter-spacing: var(--mobile-h1-letter-spacing);
    line-height: var(--mobile-h1-line-height);
    font-style: var(--mobile-h1-font-style);
  }

  .rectangle-2 {
    box-shadow: 0px 4px 4px #00000040;
    mix-blend-mode: screen;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(245, 236, 239, 0.56) 100%
    );
    opacity: 0.8;
  }

  .subtitle {
    background-color: #ffffffab;
    backdrop-filter: blur(6.3px) brightness(100%);
    -webkit-backdrop-filter: blur(6.3px) brightness(100%);
    /* border-radius: 2px 100px 2px 2px; */
    background: rgba(255, 255, 255, 0.67);
    backdrop-filter: blur(3.1500000953674316px);
  }

  .text-wrapper-3 {
    top: 0;
    left: 0;
    font-family: var(--mobile-h2-font-family);
    font-weight: var(--mobile-h2-font-weight);
    color: var(--grey);
    font-size: var(--mobile-h2-font-size);
    letter-spacing: var(--mobile-h2-letter-spacing);
    line-height: var(--mobile-h2-line-height);
    white-space: nowrap;
    font-style: var(--mobile-h2-font-style);
  }

  .p {
    top: 43px;
    left: 0;
    font-family: var(--mobile-h2-font-family);
    font-weight: var(--mobile-h2-font-weight);
    color: transparent;
    font-size: var(--mobile-h2-font-size);
    letter-spacing: var(--mobile-h2-letter-spacing);
    line-height: var(--mobile-h2-line-height);
    white-space: nowrap;
    font-style: var(--mobile-h2-font-style);
  }

  .span {
    color: #c697a5;
    letter-spacing: var(--mobile-h2-letter-spacing);
    font-family: var(--mobile-h2-font-family);
    font-style: var(--mobile-h2-font-style);
    font-weight: var(--mobile-h2-font-weight);
    line-height: var(--mobile-h2-line-height);
    font-size: var(--mobile-h2-font-size);
  }

  .text-wrapper-4 {
    color: #71717a;
    letter-spacing: var(--mobile-h2-letter-spacing);
    font-family: var(--mobile-h2-font-family);
    font-style: var(--mobile-h2-font-style);
    font-weight: var(--mobile-h2-font-weight);
    line-height: var(--mobile-h2-line-height);
    font-size: var(--mobile-h2-font-size);
  }

  .underline {
    top: 78px;
    left: 0;
    border-radius: 0px 100px 0px 0px;
  }

  .div-2 {
    top: 552px;
    left: 32px;
    font-family: var(--mobile-body-font-family);
    font-weight: var(--mobile-body-font-weight);
    color: transparent;
    font-size: var(--mobile-body-font-size);
    text-align: center;
    letter-spacing: var(--mobile-body-letter-spacing);
    line-height: var(--mobile-body-line-height);
    font-style: var(--mobile-body-font-style);
  }

  .text-wrapper-5 {
    color: #c697a5;
    letter-spacing: var(--mobile-body-letter-spacing);
    font-family: var(--mobile-body-font-family);
    font-style: var(--mobile-body-font-style);
