---
import { Image } from "astro:assets";

import benefit1 from "~/assets/benefit/benefit1.png";
import benefit2 from "~/assets/benefit/benefit2.png";
import benefit3 from "~/assets/benefit/benefit3.png";

import bg from "~/assets/benefit/benefit_bg.png";

import JoinButton from "~/components/common/joinButton.astro";
import Circle from "./benefit/circle.astro";
import BenefitContainer from "./benefit/benefit_container.astro";

import Title from "~/components/common/title.astro";
---

<div
  id="benefit"
  class="relative flex min-h-max flex-col items-center justify-center overflow-hidden"
>
  <div class="relative w-full">
    <Image
      class="absolute left-0 right-0 top-0 -z-10 mx-auto"
      src={bg}
      alt="background image"
    />
  </div>
  <div>
    <Title title_small="" title1="うれしのサロンで" title2="　　得られること" />
  </div>
  <div class="flex w-[90%] flex-col lg:flex-row lg:gap-6">
    <div class="pb-10">
      <BenefitContainer
        bg={benefit1}
        number="01"
        title="かわいく賢く生きるためのスキル"
        description=`うれしのちゃんのビジネスや
    恋愛テク・美容情報をシェア♪
    ・ビジネスマインド
    ・韓国美容/整形情報
    ・ハイスペ恋愛/モテテク
    ・SNS/ブランディング`
      />
    </div>
    <div class="pb-10">
      <BenefitContainer
        bg={benefit2}
        number="02"
        title="一緒に成長できる仲間と環境"
        description=`向上心のある女性たちが集まり
      高め合っていける場所！
      ・情報交換ができる
      ・モチベがUPする
      ・人生の視野が広がる
      ・会って刺激をもらえる`
      />
    </div>
    <div class="pb-10">
      <BenefitContainer
        bg={benefit3}
        number="03"
        title="ビジネスチャンスの拡大化"
        description=`様々な分野で活躍する女性がいるから
          選択肢や可能性が広がる！
          ・ビジネスパートナー探し
          ・クライアントの紹介
          ・コラボで売上＆影響力UP
          ・協力してSNSアカウント強化`
      />
    </div>
  </div>
</div>

<div class="mt-10 w-full">
  <div class="default-button">
    <div class="overlap-9">
      <JoinButton />
    </div>
  </div>
</div>

