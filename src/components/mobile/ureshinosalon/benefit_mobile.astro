---
import { Image } from 'astro:assets';

import bg from '~/assets/benefit/bg.png';

import benefit1 from '~/assets/benefit/benefit1.png';
import benefit2 from '~/assets/benefit/benefit2.png';
import benefit3 from '~/assets/benefit/benefit3.png';

// import highlight from '~/assets/benefit/highlight.png';

import JoinButton from '~/components/common/joinButton.astro';
// import Title from './benefit/title.astro';
import Circle from './benefit/circle.astro';
import Benefit from './benefit/benefit.astro';
// import bg2 from '~/assets/benefit/benefits_fake.png';

import Title from '~/components/common/title.astro';
---

<div class="pt-5">
  <Title title_small="" title1="うれしのサロンで" title2="　　得られること" />
</div>

<!-- Features -->

<section class={`section-sm`}>
  <div class="container">
    <div class="row items-center justify-between">
      <div
        class={`mb:md-0 mb-6 md:col-5`}
      >
      <Benefit
        bg={benefit1}
        number="01"
        title="かわいく賢く生きるためのスキル"
        // description=`うれしのちゃんのビジネスや
        // 恋愛テク・美容情報をシェア♪`
      >
      </div>
      <div class={`md:col-7 lg:col-6`}>
        <h2 class="mb-4" >うれしのちゃんのビジネスや
        恋愛テク・美容情報をシェア♪</h2>
        <p class="mb-8 text-lg" />
        <div>
          <span class="">
            ・ビジネスマインド</br>
            ・韓国美容/整形情報</br>
            ・ハイスペ恋愛/モテテク</br>
            ・SNS/ブランディング
            </span>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- /Features -->

<div
  id="benefit"
  class="mt-10 flex min-h-[2540px] flex-col items-center justify-center overflow-hidden"
>
  <div class="absolute w-full">



    <div class="default-button">
      <div class="overlap-9 -mt-[4.4rem]">
        <JoinButton microcopy1="先着200名限定" microcopy2="＼第2期メンバー募集中！／" text="　　今すぐ入会　　>" />
      </div>
    </div>
  </div>
  <div class="benefits absolute z-30 -mt-[103rem] flex w-full flex-col">
    <div class="title">
      <div class="header-mark"></div>
    </div>


    <Benefit
      bg={benefit2}
      number="02"
      title="一緒に成長できる仲間と環境"
      description=`向上心のある女性たちが集まり
      高め合っていける場所！`
    >
      <div>
        <span class="">
          ・情報交換ができる</br>
          ・モチベがUPする</br>
          ・人生の視野が広がる</br>
          ・会って刺激をもらえる
          </span>
      </div>
    </Benefit>

    <Benefit
      bg={benefit3}
      number="03"
      title="ビジネスチャンスの拡大化"
      description=`様々な分野で活躍する女性がいるから
      選択肢や可能性が広がる！`
    >
      <div>
        <span class="">
          ・ビジネスパートナー探し</br>
          ・クライアントの紹介</br>
          ・コラボで売上＆影響力UP</br>
          ・協力してSNSアカウント強化
          </span>
      </div>
    </Benefit>      
</div>

