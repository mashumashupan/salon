---
import { Image } from "astro:assets";

import layer from "~/assets/check/layer_check.svg";

import checkimage from "~/assets/check/checkimage.png";
import check from "~/assets/check/check.svg";
import checkline1 from "~/assets/check/checkline1.svg";
import checkline2 from "~/assets/check/checkline2.svg";
import dots from "~/assets/check/dots.svg";
import Checklist from "~/components/common/checklist.astro";

import Title from "~/components/common/title.astro";
import ResponsiveGrid from "~/layouts/responsiveGrid.astro";

import { Client } from "~/util/client";
import { readSingleton } from "@directus/sdk";

// Directusクライアント取得
const client = await new Client().create();
// Directusからprocessのデータを配列で取得
const obj = await client.request(readSingleton("check"));
