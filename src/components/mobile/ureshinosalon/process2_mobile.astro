  --h1-j-font-style: normal;
  --pink-shadow: 3px 4px 5.800000190734863px 0px rgba(193, 157, 169, 1);
  --drop: 0px 2px 4px 0px rgba(177, 165, 171, 0.8);
  --variable-collection-beige: rgba(229, 213, 203, 1);
  --variable-collection-pink: rgba(198, 151, 165, 1);
  --variable-collection-white: rgba(255, 255, 255, 1);
  --variable-collection-pale-pink: rgba(245, 236, 239, 1);
  --variable-collection-salmon: rgba(215, 169, 159, 1);
  --variable-collection-beige-gradient: rgba(255, 255, 255, 0);
  --variable-collection-purple: rgba(158, 135, 190, 1);
}

.terms-conditions {
  width: 328px;
  height: 345px;
  border-radius: 2px;
  overflow: hidden;
}

.terms-conditions .t-and-c {
  display: inline-flex;
  flex-direction: column;
  height: 345px;
  align-items: center;
  gap: 56px;
  padding: 40px 16px;
  position: relative;
  background-color: var(--variable-collection-white);
  border-radius: 8px;
  overflow-y: scroll;
}

.terms-conditions .frame {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  gap: 24px;
  position: relative;
  flex: 0 0 auto;
}

.terms-conditions .text-wrapper {
  width: fit-content;
  margin-top: -1px;
  font-family: var(--mobile-h2-font-family);
  color: var(--dark-grey);
  font-size: var(--mobile-h2-font-size);
  letter-spacing: var(--mobile-h2-letter-spacing);
  line-height: var(--mobile-h2-line-height);
  white-space: nowrap;
  position: relative;
  font-weight: var(--mobile-h2-font-weight);
  font-style: var(--mobile-h2-font-style);
}

.terms-conditions .div {
  align-items: flex-start;
  gap: 16px;
  display: inline-flex;
  flex-direction: column;
  position: relative;
  flex: 0 0 auto;
}

.terms-conditions .group {
  position: relative;
  width: 296px;
  height: 44px;
}

.terms-conditions .div-wrapper {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 10px 20px;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 4px;
  border-top-width: 1px;
  border-top-style: solid;
  border-right-width: 1px;
  border-right-style: solid;
  border-left-width: 1px;
  border-left-style: solid;
  border-color: var(--light-grey);
}

.terms-conditions .text-wrapper-2 {
  width: fit-content;
  margin-top: -1px;
  font-family: var(--body-j-font-family);
  color: var(--grey);
  font-size: var(--body-j-font-size);
  letter-spacing: var(--body-j-letter-spacing);
  line-height: var(--body-j-line-height);
  white-space: nowrap;
  position: relative;
  font-weight: var(--body-j-font-weight);
  font-style: var(--body-j-font-style);
}

.terms-conditions .line {
  position: absolute;
  width: 296px;
  height: 1px;
  top: 44px;
  left: 0;
  object-fit: cover;
}

.terms-conditions .text-wrapper-3 {
  position: relative;
  width: 296px;
  font-family: var(--mobile-body-font-family);
  font-weight: var(--mobile-body-font-weight);
  color: var(--grey);
  font-size: var(--mobile-body-font-size);
  letter-spacing: var(--mobile-body-letter-spacing);
  line-height: var(--mobile-body-line-height);
  font-style: var(--mobile-body-font-style);
}

.terms-conditions .frame-2 {
  align-items: center;
  gap: 10px;
  display: inline-flex;
  flex-direction: column;
  position: relative;
  flex: 0 0 auto;
}

.terms-conditions .button {
  all: unset;
  box-sizing: border-box;
  display: inline-flex;
  flex-direction: column;
  height: 42px;
  align-items: center;
  justify-content: center;
  gap: 8px;
  position: relative;
  margin-bottom: -1px;
  border-radius: 100px;
  overflow: hidden;
  border: 1px solid;
  border-color: var(--grey);
}

.terms-conditions .state-layer {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 10px 16px 10px 24px;
  position: relative;
  flex: 1;
  align-self: stretch;
  width: 100%;
  flex-grow: 1;
}

.terms-conditions .label-text {
  position: relative;
  width: fit-content;
  margin-top: -1px;
  font-family: var(--montserrat-font-family);
  font-weight: var(--montserrat-font-weight);
  color: var(--grey);
  font-size: var(--montserrat-font-size);
  text-align: center;
  letter-spacing: var(--montserrat-letter-spacing);
  line-height: var(--montserrat-line-height);
  white-space: nowrap;
  font-style: var(--montserrat-font-style);
}

.terms-conditions .img {
  position: relative;
  width: 18px;
  height: 18px;
}

.terms-conditions .default-button {
  position: relative;
  width: 260px;
  height: 84px;
  box-shadow: 1px 1px 2.1px #7e76d4, 0px 4px 4px #00000040;
}

.terms-conditions .overlap-group {
  position: relative;
  width: 280px;
  height: 84px;
  left: -10px;
  border-radius: 100px;
}

.terms-conditions .frame-3 {
  display: inline-flex;
  align-items: flex-end;
  gap: 56px;
  padding: 32px 30px 32px 70px;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #a37dd21a;
  border-radius: 100px;
  box-shadow: 1px 1px 2.1px #7e76d4;
}

.terms-conditions .text-wrapper-4 {
  width: fit-content;
  margin-top: -1px;
  font-family: "Ryo Gothic PlusN-B", Helvetica;
  color: var(--variable-collection-white);
  font-size: 18px;
  letter-spacing: 4px;
  line-height: 20px;
  white-space: nowrap;
  position: relative;
  font-weight: 400;
}

.terms-conditions .intersect {
  position: absolute;
  width: 263px;
  height: 35px;
  top: 0;
  left: 8px;
  mix-blend-mode: lighten;
}

.terms-conditions .p {
  width: 289px;
  font-family: var(--small-text-j-font-family);
  color: var(--light-grey);
  font-size: var(--small-text-j-font-size);
  letter-spacing: var(--small-text-j-letter-spacing);
  line-height: var(--small-text-j-line-height);
  position: relative;
  font-weight: var(--small-text-j-font-weight);
  font-style: var(--small-text-j-font-style);
}

.terms-conditions .span {
  letter-spacing: var(--small-text-j-letter-spacing);
  font-family: var(--small-text-j-font-family);
  font-style: var(--small-text-j-font-style);
  font-weight: var(--small-text-j-font-weight);
  line-height: var(--small-text-j-line-height);
  font-size: var(--small-text-j-font-size);
}
</style>