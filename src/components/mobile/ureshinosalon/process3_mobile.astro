.box {
  width: 337px;
  height: 406px;
}

.box .contact {
  width: 341px;
  height: 406px;
  top: 0;
  left: 0;
}

.box .overlap {
  position: relative;
  width: 337px;
  height: 406px;
}

.box .bg {
  position: absolute;
  width: 332px;
  height: 369px;
  top: 37px;
  left: 0;
}

.box .overlap-group {
  position: relative;
  height: 369px;
}

.box .rectangle {
  position: absolute;
  width: 332px;
  height: 369px;
  top: 0;
  left: 0;
  background-color: var(--variable-collection-white);
  border-radius: 8px;
  opacity: 0.61;
}

.box .img {
  position: absolute;
  width: 332px;
  height: 369px;
  top: 0;
  left: 0;
}

.box .line {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 24px;
  padding: 10px 24px;
  position: absolute;
  top: 209px;
  left: 58px;
  background-color: var(--variable-collection-salmon);
  border-radius: 100px;
}

.box .text-wrapper {
  position: relative;
  width: fit-content;
  color: var(--variable-collection-white);
  font-size: var(--body-j-font-size);
  letter-spacing: var(--body-j-letter-spacing);
  line-height: var(--body-j-line-height);
  white-space: nowrap;
  font-family: var(--body-j-font-family);
  font-weight: var(--body-j-font-weight);
  text-align: center;
  font-style: var(--body-j-font-style);
}

.box .line-2 {
  position: relative;
  width: 40px;
  height: 40px;
}

.box .qr {
  position: absolute;
  width: 80px;
  height: 80px;
  top: 288px;
  left: 128px;
}

.box .div {
  position: absolute;
  top: 15px;
  left: 140px;
  transform: rotate(-9.44deg);
  opacity: 0.46;
  font-family: "Charlotte-Regular", Helvetica;
  font-weight: 400;
  color: var(--variable-collection-salmon);
  font-size: 40px;
  letter-spacing: 0;
  line-height: normal;
}

