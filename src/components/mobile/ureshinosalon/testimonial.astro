---
import { Image } from 'astro:assets';

import rect from '~/assets/testimonial/rect.png';
import testimonial_muto from '~/assets/testimonial/testimonial_muto.png';
import testimonial_nanao from '~/assets/testimonial/testimonial_nanao.png';
import JoinButton from '~/components/common/joinButton.astro';
import Voice from '~/components/common/voice.astro';
import bg from '~/assets/mystory/flowers2.png';

import Title from '~/components/common/title.astro';
import ZigzagRow from '~/layouts/ZigzagRow.astro';
import ResponsiveGrid from '~/layouts/responsiveGrid.astro';

import { Client, getImage } from '~/util/client';
import { readSingleton } from '@directus/sdk';

// Directusクライアント取得
const client = await new Client().create();
// Directusからprocessのデータを配列で取得
const obj = await client.request(readSingleton('testimonial'));
const round_icon = await getImage(client, obj?.round_icon as string);
const round_icon2 = await getImage(client, obj?.round_icon2 as string);
