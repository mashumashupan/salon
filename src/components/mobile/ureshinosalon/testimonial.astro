<div id="testimonials" class="flex flex-col justify-center overflow-hidden">
  <div class="relative w-full">
    <Image
      class="absolute left-0 right-0 top-0 -z-10 mx-auto"
      src={bg}
      alt="background image"
    />
  </div>
  <Title title_small="" title1="推薦者コメント" title2="" />
  <div class="lg:-gap-5 z-10 mt-16 flex flex-col items-center gap-14">
    <div class="">
      <div
        class="overlap-group relative flex flex-col items-center justify-center"
      >
        <p class="p">
          <span class="span">うれしのサロン</span>
          <span class="text-wrapper-2"> を<br />おすすめします！</span>
        </p>
        <div class="rectangle absolute ml-4 w-80">
          <Image class="rect" src={rect} alt="" />
        </div>
      </div>
    </div>
    <div class="bubble flex flex-col gap-10 lg:w-3/4 lg:gap-0">
      <ResponsiveGrid>
        <ZigzagRow align="left" slot="top">
          <Voice
            side="left"
            name={obj?.name ?? ''}
            title={obj?.title ?? ''}
            icon={round_icon}
            useStar={true}
          >
            <Fragment set:html={obj.description} />
          </Voice>
        </ZigzagRow>
        <ZigzagRow align="right" slot="bottom">
          <Voice
            side="right"
            name={obj?.name2 ?? ''}
            title={obj?.title2 ?? ''}
            icon={round_icon2}
            useStar={true}
          >
            <Fragment set:html={obj.description2} />
          </Voice>
        </ZigzagRow>
      </ResponsiveGrid>
    </div>
  </div>
</div>

<div class="default-button">
  <div class="overlap-9">
    <JoinButton />
  </div>
</div>

