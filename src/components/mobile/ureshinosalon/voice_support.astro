---
import { Image } from "astro:assets";

import arrow from "~/assets/voice/arrow.png";
import underline from "~/assets/voice/underline.png";

import voice2image from "~/assets/voice/voice2image.png";
import voice_reina from "~/assets/voice/voice_reina.png";
import voice_karen from "~/assets/voice/voice_karen.png";

import bg from "~/assets/mystory/flowers3.png";

import Title from "~/components/common/title.astro";
import Voice from "~/components/common/voice.astro";
import ZigzagRow from "~/layouts/ZigzagRow.astro";
import ResponsiveGrid from "~/layouts/responsiveGrid.astro";

import { Client } from "~/util/client";
import { readSingleton } from "@directus/sdk";

// Directusクライアント取得
const client = await new Client().create();
// Directusからprocessのデータを配列で取得
const obj = await client.request(readSingleton("voiceSupport"));
