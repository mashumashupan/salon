import "@fontsource-variable/inter";
import Header from "~/components/desktop/common/header.astro";
import Footer from "~/components/desktop/common/footer.astro";
import FirstView from "~/components/desktop/common/firstview.astro";
import About from "~/components/desktop/ureshinosalon/about.astro";
import Check from "~/components/desktop/ureshinosalon/check.astro";
import Benefit from "~/components/desktop/ureshinosalon/benefit.astro";
import Testimonial from "~/components/desktop/ureshinosalon/testimonial.astro";
import Contents from "~/components/desktop/ureshinosalon/contents.astro";
import Mystory from "~/components/desktop/ureshinosalon/mystory.astro";
import Mystory2 from "~/components/desktop/ureshinosalon/mystory2.astro";
import Myjourney from "~/components/desktop/ureshinosalon/myjourney.astro";
import Startyour from "~/components/desktop/ureshinosalon/startyour.astro";
import Community from "~/components/desktop/ureshinosalon/community.astro";
import Voice2 from "~/components/desktop/ureshinosalon/voice2.astro";
import Price from "~/components/desktop/ureshinosalon/price.astro";
import Voice1 from "~/components/desktop/ureshinosalon/voice1.astro";
import Profile from "~/components/desktop/ureshinosalon/profile.astro";
import Message from "~/components/desktop/ureshinosalon/message.astro";
import Process from "~/components/desktop/ureshinosalon/process.astro";
import Process2 from "~/components/desktop/ureshinosalon/process2.astro";
import Process3 from "~/components/desktop/ureshinosalon/process3.astro";

import "~/styles/index.css";

const { generator } = Astro;
const site = "https://ureshinosalon.vercel.app/ureshinosalon";
const image = new URL("social.png", site);
const description =
  "「かわいく賢く生きる」ための女性向けオンラインサロンうれしのサロン";
---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" type="image/svg+xml" />
    <meta name="generator" content={generator} />

    <title>UreshinoSalon Page</title>
    <meta name="description" content={description} />

    <!-- social media -->
    <meta property="og:title" content="UreshinoSalon" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
